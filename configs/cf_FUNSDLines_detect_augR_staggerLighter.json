{
    "name": "FUNSDLines_detect_augR_staggerLighter",
    "cuda": true,
    "gpu": 0,
    "save_mode": "state_dict",
    "override": true,
    "data_loader": {
        "data_set_name": "FUNSDBoxDetect",
        "data_dir": "/content/FUDGE/dataset",
        "batch_size": 8,
        "shuffle": true,
        "num_workers": 4,
        "split_to_lines": true,
        "crop_to_page":false,
        "color":false,
        "rescale_range": [0.8,1.2],
        "crop_params": {
            "crop_size":[700,1600],
            "pad":50,
            "flip_horz": false,
            "rot_degree_std_dev": 1,
            "rot_freq": 0.5
        },
        "rotation": false


    },
    "validation": {
        "shuffle": false,
        "rescale_range": [1,1],
        "crop_params": false
    },

    
    "lr_scheduler_type": "none",
 
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.01,
        "weight_decay": 0.01
    },
    "loss": {
        "box":"YoloLoss"
    },
    "loss_params": {
        "box": {
            "ignore_thresh": 0.5,
            "bad_conf_weight": 20.0
        }
    },
    "loss_weights":{"box":1.0},
    "metrics": [],
    "trainer": {
        "class": "BoxDetectTrainer",
        "iterations": 250000,
        "save_dir": "saved/",
        "val_step": 10000,
        "save_step": 50000,
        "save_step_minor": 500,
        "log_step": 1000,
        "verbosity": 1,
        "monitor": "loss",
        "monitor_mode": "none",
        "thresh_conf":0.88,
        "thresh_intersect":0.4,

        "use_learning_schedule": "multi_rise",
        "warmup_steps": [1000]
    },
    "arch": "YoloBoxDetector", 
    "model": {
        "color":false,
        "pred_num_neighbors": false,
        "number_of_box_types": 4,
        "number_of_point_types": 0,
        "number_of_pixel_types": 0,
        "norm_type": "group_norm",
        "dropout": true,
        "down_layers_cfg": [1,"k5-32", "M", 
                                64, 64,  "M", 
                                "hd2-128", "vd1-128", "hd4-128", 128,  "M", 
                                "hd4-128", "vd1-128", "hd8-128", 128,  "M", 
                                "hd8-256","vd2-256","hd16-256",256, 256],
        "up_layers_cfg":[],
        "anchors_file": "FUNSDLines_anchors_noRot_25.json",
        "rotation":false
    }
}
